<h1>Searching for - <%= @search_term %></h1>

<table border="1">
   <tr>
   	<th>Image</th>
   	<th>Title</th>
   	<th>Rank</th>
   </tr>

   <% @recipes.each do |recipe| %>
   <tr>
   	<td><%= link_to(image_tag(recipe["image_url"],size: "10"),recipe["f2f_url"]) %></td>
   	<td><%= link_to(sanitize(recipe["title"]),recipe["f2f_url"])  %></td>
   	<td><%= recipe["social_rank"] %> </td>
   </tr>

   <% end %>
</table>